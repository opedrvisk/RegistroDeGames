<MudCard>
    <MudCardMedia Image="images/cardJogo.png"></MudCardMedia>
    <MudCardHeader>
        <CardHeaderContent>
            <MudText Typo="Typo.h6">@Jogo?.Nome</MudText>
        </CardHeaderContent>
    </MudCardHeader>
    <MudCardContent>
        <MudText Typo="Typo.body2">Desenvolvedora: @Jogo?.NomeDesenvolvedora</MudText>
    </MudCardContent>
</MudCard>

@code {
    [Parameter]
    public JogoResponse? Jogo { get; set; }
}